<Window x:Class="ManagementVinarie.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ManagementVinarie"
        mc:Ignorable="d"
    Title="MainWindow" Height="1080" Width="1920" WindowState="Maximized" WindowStyle="None">

    <Window.Resources>

        <SolidColorBrush x:Key="violet1" Color="#6408B3" />
        <SolidColorBrush x:Key="violet2" Color="#231858" />
        <SolidColorBrush x:Key="violet3" Color="#120C2C" />
        <SolidColorBrush x:Key="galben" Color="#FFBB00" />
        <SolidColorBrush x:Key="rosu" Color="#5A0704" />
        <SolidColorBrush x:Key="rosu2" Color="#A92520" />
        <SolidColorBrush x:Key="verde" Color="#08B30E" />
        <SolidColorBrush x:Key="albastru" Color="#0E08B3" />

        <Style TargetType="{x:Type ComboBox}">
            <Setter Property="FontSize" Value="15px"></Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Grid.Column="2" Focusable="false" IsChecked="{Binding Path=IsDropDownOpen,Mode=TwoWay,RelativeSource={RelativeSource TemplatedParent}}" >
                                <ToggleButton.Template>
                                    <ControlTemplate>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border x:Name="Border"  Grid.ColumnSpan="2"  Background="{StaticResource violet3}" BorderBrush="{StaticResource violet2}" BorderThickness="1" />
                                            <Border Grid.Column="0"   Margin="1"  Background="{StaticResource violet2}"  BorderBrush="{StaticResource violet2}" BorderThickness="0,0,1,0" />
                                            <Path x:Name="Arrow" Grid.Column="1"  Fill="{StaticResource galben}" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="ToggleButton.IsMouseOver" Value="true">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource galben}" />
                                            </Trigger>
                                            <Trigger Property="ToggleButton.IsChecked" Value="true">
                                                <Setter TargetName="Border" Property="Background" Value="{StaticResource galben}" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite" TextBlock.TextAlignment="Center" TextBlock.FontSize="30" TextBlock.FontWeight="Bold" TextBlock.Foreground="White" IsHitTestVisible="False"  Content="{TemplateBinding SelectionBoxItem}" ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" Margin="3"  />
                            <TextBox x:Name="PART_EditableTextBox" Foreground="White" Visibility="Hidden" IsReadOnly="{TemplateBinding IsReadOnly}"/>
                            <Popup Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True"  Focusable="False" PopupAnimation="Slide">
                                <Grid  Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border x:Name="DropDownBorder" Background="{StaticResource violet3}" />
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" />
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Background" Value="{StaticResource violet2}"></Setter>
            <Setter Property="Foreground" Value="{StaticResource galben}"></Setter>
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>


        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource violet2}"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="TextAlignment" Value="Center"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>


        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource violet2}"></Setter>
            <Setter Property="Background" Value="White"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="Margin" Value="2,0,2,0"></Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource violet2}"></Setter>
                    <Setter Property="Foreground" Value="{StaticResource galben}"></Setter>
                </Trigger>
            </Style.Triggers>

        </Style>


        <Style BasedOn="{StaticResource {x:Type DataGridColumnHeader}}" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="Background" Value="{StaticResource violet3}" />
            <Setter Property="Foreground" Value="white" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="BorderBrush" Value="White" />




        </Style>
        <Style TargetType="DataGrid">
            <!-- Make the border and grid lines a little less imposing -->
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource violet1}" />
            <Setter Property="VerticalGridLinesBrush" Value="{StaticResource violet1}" />
            <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
            <Setter Property="SelectionMode" Value="Single"></Setter>

            <Setter Property="ColumnWidth" Value="*"></Setter>
            <Setter Property="HorizontalScrollBarVisibility" Value="Disabled"></Setter>
            



            <Setter Property="RowStyle">
                <Setter.Value>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="{StaticResource rosu2}" />
                        <Setter Property="OpacityMask" Value="White" />
                        <Setter Property="Foreground" Value="{StaticResource galben}" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="MaxHeight" Value="50" />



                        <Style.Triggers>
                            <!-- Highlight a grid row as the mouse passes over -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource violet1}" />
                                <Setter Property="BorderThickness" Value="1px" />
                                <Setter Property="BorderBrush" Value="White" />
                                <Setter Property="Foreground" Value="White" />


                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource violet1}" />
                                <Setter Property="BorderBrush" Value="White" />
                                <Setter Property="BorderThickness" Value="1px" />
                                <Setter Property="Foreground" Value="White" />

                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>



            <Setter Property="CellStyle">
                <Setter.Value>
                    <Style TargetType="DataGridCell">
                        <Style.Triggers>
                            <!-- Highlight selected rows -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#ff66ccff" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="Foreground" Value="{StaticResource galben}" />
                            </Trigger>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="Background" Value="#ff66ccff" />
                                <Setter Property="BorderBrush" Value="{StaticResource galben}" />
                                <Setter Property="BorderThickness" Value="1"/>
                                <Setter Property="Foreground" Value="#FFBB00" />
                            </Trigger>
                        </Style.Triggers>
                        <!-- Add some padding around the contents of a cell -->
                        <Setter Property="TextBlock.TextAlignment" Value="Center" />
                        <Setter Property="Padding" Value="4,3,4,3" />
                        <Setter Property="BorderBrush" Value="Transparent"/>
                        <Setter Property="BorderThickness" Value="1"/>
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Background" Value="{StaticResource galben}" />

                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Padding="{TemplateBinding Padding}" 
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            
                                            >

                                        <ContentPresenter/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="FocusVisualStyle">
                            <Setter.Value>
                                <Style TargetType="Control">
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                </Style>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>


        <Style TargetType="{x:Type TabItem}" x:Key="TabItem2" >
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Border  CornerRadius="30"  Width="80" Height="80" x:Name="PART_Border" Background="#F9E8C0" BorderThickness="1" BorderBrush="LightGray" Margin="5,0,5,0">
                            <ContentPresenter x:Name="PART_content" TextBlock.Foreground="White" ContentSource="Header" HorizontalAlignment="Center"  VerticalAlignment="Center" Margin="0,0,0,0" />

                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsVisible" Value="True">
                                <Setter Property="Foreground" Value="#FFBB00" />

                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="PART_Border" Property="Background" Value="#BBEBF4" />
                                <Setter Property="TextBlock.Foreground" Value="#BBEBF4" />


                            </Trigger>

                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type TabControl}" x:Key="TabControl2">
            <Setter Property="TabStripPlacement" Value="Left" />
            <Setter Property="Margin" Value="2" />
            <Setter Property="Padding" Value="2"    />
            <Setter Property="Background" Value="White" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid ClipToBounds="True" SnapsToDevicePixels="True" KeyboardNavigation.TabNavigation="Local">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Name="ColumnDefinition0" />
                                <ColumnDefinition Width="0" Name="ColumnDefinition1" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" Name="RowDefinition0" />
                                <RowDefinition Height="*" Name="RowDefinition1" />
                            </Grid.RowDefinitions>
                            <Border  x:Name="HeaderBorder"
                            BorderBrush="white"
                            BorderThickness="1"
                            CornerRadius="30"
                            Background="#231858"
                            Margin="0,0,0,0"
                            Width="1050px"
                                    Height="80px">

                                <TabPanel IsItemsHost="True"
                                  Name="HeaderPanel"
                                  Panel.ZIndex="1"
                                  KeyboardNavigation.TabIndex="1"
                                  Grid.Column="0"
                                  Grid.Row="0" 
                                          HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                            </Border>
                            <StackPanel  HorizontalAlignment="Right"  VerticalAlignment="Top" Orientation="Horizontal">
                                <Button x:Name="btnMin" Click="btnMin_Click" Margin="5,0,5,0"  Height="25" Width="25" Background="#231858"  Foreground="White" FontSize="10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="-"></Button>
                                <Button x:Name="btnClose" Click="btnClose_Click"  Height="25" Width="25" Background="#231858" Foreground="White" FontSize="10" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Content="X"></Button>
                            </StackPanel>




                            <Grid Name="ContentPanel"
                          KeyboardNavigation.TabIndex="2"
                          KeyboardNavigation.TabNavigation="Local"
                          KeyboardNavigation.DirectionalNavigation="Contained"
                          Grid.Column="0"
                          Grid.Row="1">
                                <Border Background="Transparent"
                                BorderBrush="Transparent"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="0">
                                    <ContentPresenter Content="{TemplateBinding SelectedContent}"
                                              ContentTemplate="{TemplateBinding SelectedContentTemplate}"
                                              ContentStringFormat="{TemplateBinding SelectedContentStringFormat}"
                                              ContentSource="SelectedContent"
                                              Name="PART_SelectedContentHost"
                                              Margin="0"
                                              SnapsToDevicePixels="{TemplateBinding UIElement.SnapsToDevicePixels}" />
                                </Border>
                            </Grid>
                        </Grid>
                        <ControlTemplate.Triggers>

                            <Trigger Property="UIElement.IsEnabled" Value="False">
                                <Setter Property="TextElement.Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource rosu}">
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="493*"/>
        </Grid.RowDefinitions>

        <TabControl SelectionChanged="TabControl_SelectionChanged" Background="White" Style="{StaticResource TabControl2}" TabStripPlacement="Top" Margin="1,2,3,2" Grid.RowSpan="2">
            <TabItem Style="{StaticResource TabItem2}" >
                <TabItem.Header>
                    <Grid Width="80" Height="80">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.75*"></RowDefinition>
                            <RowDefinition Height="0.25*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image Width="60" Height="60" Source="Images/ic_vin.png"></Image>

                        <TextBlock TextAlignment="Center" Width="80" Background="#231858" Text="Vinuri" Grid.Row="1" FontSize="16"  HorizontalAlignment="Center"  VerticalAlignment="Center" Margin="0,0,0,0"  FontWeight="Bold"/>
                    </Grid>

                </TabItem.Header>

                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <DataGrid 
                        Name="VinuriDG" 
                        Background="{StaticResource violet2}"
                        IsReadOnly="True"
                        HeadersVisibility="Column"
                        Margin="50,50,25,50"
                        Grid.Column="0" SelectionChanged="VinuriDG_SelectionChanged"
                        
                       
                        >



                    </DataGrid>


                    <Grid Margin="25,50,50,50" 
                          Grid.Row="0" 
                          Grid.Column="1"
                          >
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Viewbox Margin="0,0,0,10" Stretch="Fill" Grid.Row="0" Grid.ColumnSpan="3">
                            <TextBlock Width="150">Denumire</TextBlock>
                        </Viewbox>
                        <Viewbox  Margin="0,10,0,10" Stretch="Fill" Grid.Row="1" Grid.ColumnSpan="3">
                            <TextBox Name="DenumireVinTB" Width="150"></TextBox>
                        </Viewbox>

                        <Viewbox  Margin="0,10,0,10" Stretch="Fill" Grid.Row="2" Grid.ColumnSpan="3">
                            <TextBlock Width="150">Cantitate</TextBlock>
                        </Viewbox>
                        <Viewbox Margin="0,10,0,10" Stretch="Fill" Grid.Row="3" Grid.ColumnSpan="3">
                            <TextBox Name="CantitateVinTB" Width="150"></TextBox>
                        </Viewbox>

                        <Viewbox  Grid.Row="7" Margin="0,20,0,20" Grid.ColumnSpan="2" Stretch="Fill" >
                            <Button x:Name="AdaugareVinB" Click="AdaugareVinB_Click">Adaugă</Button>
                        </Viewbox>
                        <Viewbox Grid.Row="7" Margin="0,20,0,20" Grid.Column="2"  Grid.ColumnSpan="2" Stretch="Fill" >
                            <Button x:Name="ModificareVinB" Click="ModificareVinB_Click">Modifică</Button>
                        </Viewbox>
                        <Viewbox Grid.Row="7" Margin="0,20,0,20" Grid.Column="4"  Grid.ColumnSpan="2" Stretch="Fill" >
                            <Button x:Name="StergereVinB" Click="StergereVinB_Click" >Șterge</Button>
                        </Viewbox>

                        <Viewbox Margin="0,10,0,10" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Stretch="Fill">
                            <TextBlock >Data Fabricării</TextBlock>
                        </Viewbox>

                        <Viewbox Grid.Row="5" Grid.Column="0"  Stretch="Fill" Margin="0,10,0,10" Grid.ColumnSpan="3" >


                            <DatePicker Width="100" Name="DataFabricareDP" Background="{StaticResource violet2}" Foreground="{StaticResource galben}">
                                <DatePicker.Resources>

                                    <Style TargetType="{x:Type DatePickerTextBox}">
                                        <Setter Property="IsReadOnly" Value="True"/>
                                        <Setter Property="Control.Template">
                                            <Setter.Value>
                                                <ControlTemplate>
                                                    <TextBox x:Name="PART_TextBox" 
                                    Text="{Binding Path=SelectedDate, RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}}" />
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </DatePicker.Resources>
                            </DatePicker>
                        </Viewbox>


                        <Viewbox Stretch="Fill" Margin="50,0,10,0" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="3" >
                            <TextBlock >ID clasificare</TextBlock>
                        </Viewbox>
                        <ComboBox Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3"  Margin="50,10,0,10" Name="ClasificareCB"  Background="{StaticResource violet2}" SelectionChanged="SalaDegustareCB_SelectionChanged"/>


                        <Border  Grid.Row="2" Grid.RowSpan="5"  Grid.Column="3" Grid.ColumnSpan="3" 
                                 BorderBrush="{StaticResource violet3}"
                                 Background="{StaticResource violet2}"
                                 
                                 BorderThickness="5"
                                 Margin="50,10,0,10">
                            <Image Name="VinIMG"></Image>
                        </Border>
                        <Viewbox Margin="50,10,0,10" Stretch="Fill" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="3" >
                            <Button Name="AdaugareImagineVinB" Background="{StaticResource violet2}" Foreground="{StaticResource galben}"
                                Content="Alege Imagine Vin" Click="AdaugareImagineVinB_Click"></Button>
                        </Viewbox>

                    </Grid>


                </Grid>

            </TabItem>
            <TabItem Style="{StaticResource TabItem2}" >
                <TabItem.Header>
                    <Grid Width="80" Height="80">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.75*"></RowDefinition>
                            <RowDefinition Height="0.25*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image Width="60" Height="60" Source="Images/ic_clasificare.png"></Image>

                        <TextBlock TextAlignment="Center" Width="80" Background="#231858" Text="Clasificări" Grid.Row="1" FontSize="16"  HorizontalAlignment="Center"  VerticalAlignment="Center" Margin="0,0,0,0"  FontWeight="Bold"/>
                    </Grid>

                </TabItem.Header>


                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <DataGrid 
                        Name="ClasificariDG" 
                        Background="{StaticResource violet2}"
                        IsReadOnly="True"
                        HeadersVisibility="Column"
                        Margin="50,50,25,50"
                        Grid.Column="0" SelectionChanged="ClasificariDG_SelectionChanged"
                        
                       
                        >



                    </DataGrid>


                    <Grid Margin="25,50,50,50" 
                          Grid.Row="0" 
                          Grid.Column="1"
                          >
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>




                        <Viewbox Grid.Row="7" Margin="0,20,0,20" Grid.ColumnSpan="2" Stretch="Fill" >
                            <Button x:Name="AdaugareClasificareB" Click="AdaugareClasificareB_Click">Adaugă</Button>
                        </Viewbox>
                        <Viewbox Grid.Row="7" Margin="0,20,0,20" Grid.Column="2"  Grid.ColumnSpan="2" Stretch="Fill" >
                            <Button x:Name="ModificareClasificareB" Click="ModificareClasificareB_Click">Modifică</Button>
                        </Viewbox>
                        <Viewbox Grid.Row="7" Margin="0,20,0,20" Grid.Column="4"  Grid.ColumnSpan="2" Stretch="Fill" >
                            <Button x:Name="StergereClasificareB" Click="StergereClasificareB_Click" >Șterge</Button>
                        </Viewbox>







                        <Viewbox Margin="50,0,0,0" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Stretch="Fill" >
                            <TextBlock Width="150">Id Culoare</TextBlock>
                        </Viewbox>

                        <ComboBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3"  Margin="50,10,0,0" Name="CuloareCB"  Background="{StaticResource violet2}" SelectionChanged="SalaDegustareCB_SelectionChanged"/>


                        <Viewbox Margin="50,0,0,0" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Stretch="Fill">
                            <TextBlock Width="150">Id Continut Alcool</TextBlock>
                        </Viewbox>

                        <ComboBox  Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3"  Margin="50,10,0,0" Name="AlcoolCB"  Background="{StaticResource violet2}" SelectionChanged="SalaDegustareCB_SelectionChanged"/>

                        <Viewbox Margin="50,0,0,0" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="3" Stretch="Fill">
                            <TextBlock Width="150">Id Cantitate Zahăr</TextBlock>
                        </Viewbox>

                        <ComboBox  Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3"  Margin="50,10,0,0" Name="ZaharCB"  Background="{StaticResource violet2}" SelectionChanged="SalaDegustareCB_SelectionChanged"/>


                        <Viewbox Margin="50,0,0,0" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="3" Stretch="Fill">
                            <TextBlock Width="150">Id Calitate Struguri</TextBlock>
                        </Viewbox>

                        <ComboBox Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="3"  Margin="50,10,0,0" Name="CalitateCB"  Background="{StaticResource violet2}" SelectionChanged="SalaDegustareCB_SelectionChanged"/>


                    </Grid>


                </Grid>

            </TabItem>
            <TabItem Style="{StaticResource TabItem2}" >
                <TabItem.Header>
                    <Grid Width="80" Height="80">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0.75*"></RowDefinition>
                            <RowDefinition Height="0.25*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Image Width="60" Height="60" Source="Images/ic_culori.png"></Image>

                        <TextBlock TextAlignment="Center" Width="80" Background="#231858" Text="Culori" Grid.Row="1" FontSize="16"  HorizontalAlignment="Center"  VerticalAlignment="Center" Margin="0,0,0,0"  FontWeight="Bold"/>
                    </Grid>

                </TabItem.Header>
                <Grid >
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <DataGrid 
                        Name="CuloriDG" 
                        Background="{StaticResource violet2}"
                        IsReadOnly="True"
                        HeadersVisibility="Column"
                        Margin="50,50,25,50"
                        Grid.Column="0" SelectedCellsChanged="CuloriDG_SelectedCellsChanged" SelectionChanged="CuloriDG_SelectionChanged"
                        
                       
                        >



                    </DataGrid>


                    <Grid Margin="25,50,50,50" 
                          Grid.Row="0" 
                          Grid.Column="1"
                          >
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Viewbox Grid.Row="2" Grid.ColumnSpan="3">
                            <TextBlock Width="150">Denumire Culoare</TextBlock>
                        </Viewbox>
                        <Viewbox Grid.Row="3" Grid.ColumnSpan="3">
                            <TextBox Name="DenumireCuloareTB" Width="150"></TextBox>
                        </Viewbox>

                        <Viewbox Grid.Row="5" Stretch="Fill" >
                            <Button x:Name="AdaugareB" Click="AdaugareB_Click">Adaugă</Button>
                        </Viewbox>
                        <Viewbox Grid.Row="5" Grid.Column="1" Stretch="Fill" >
                            <Button x:Name="ModificareB" Click="ModificareB_Click">Modifică</Button>
                        </Viewbox>
                        <Viewbox Grid.Row="5" Grid.Column="2" Stretch="Fill" >
                            <Button x:Name="StergereB" Click="StergereB_Click" >Șterge</Button>
                        </Viewbox>


                    </Grid>

                </Grid>

            </TabItem>
